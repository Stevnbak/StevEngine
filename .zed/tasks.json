[
	{
		"label": "debug",
		"command": "CXX=clang cmake -S . -B build -DCMAKE_BUILD_TYPE=Debug -DDEBUG_EXECUTABLE=ON -DUSE_NETWORKING=ON",
		"cwd": "$ZED_WORKTREE_ROOT",
		"reveal": "always"
	},
	{
		"label": "release",
		"command": "CXX=clang cmake -S . -B build -DCMAKE_BUILD_TYPE=Release -DDEBUG_EXECUTABLE=OFF",
		"cwd": "$ZED_WORKTREE_ROOT",
		"reveal": "always"
	},
	{
		"label": "build",
		"command": "cmake --build build",
		"cwd": "$ZED_WORKTREE_ROOT",
		"reveal": "never",
		"hide": "on_success",
		"allow_concurrent_runs": true
	},
	{
		"label": "start",
		"command": "cmake --build build && gdb -ex run ./build/debug_development",
		"show_command": false,
		"cwd": "$ZED_WORKTREE_ROOT",
		"reveal": "never",
		"hide": "never",
		"allow_concurrent_runs": true
	},
	{
		"label": "test",
		"command": "cmake --build build && ./build/debug_performance",
		"show_command": false,
		"cwd": "$ZED_WORKTREE_ROOT",
		"reveal": "never",
		"hide": "never",
		"allow_concurrent_runs": true
	}
]
